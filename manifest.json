{
  "manifest_version": 3,
  "name": "Fleets Enhanced",
  "version": "2.0",
  "description": "Enhanced overview for Fleets.eu fleet management portals",
  "author": "Cheswick",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "fleets-enhanced-public@cheswick.dev",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.fleets.eu/*"
  ],
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Fleets Enhanced",
    "default_popup": "popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.fleets.eu/*"],
      "js": ["scripts/content_script.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["scripts/background.js"],
    "type": "module"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.png", "styles/overlay.css"],
      "matches": ["https://*.fleets.eu/*"]
    }
  ]
}
